<Window x:Class="WpfProject2.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Employee Login" Height="250" Width="400">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="35,55,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.527,1.208"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="55,96,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.846,-1.265"/>
        <TextBox Name="txtName" HorizontalAlignment="Center" VerticalContentAlignment="Center" Height="30" Margin="0,53,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="212"/>
        <TextBox Name="txtEmployeeId" HorizontalAlignment="Center" Height="30" VerticalContentAlignment="Center" Margin="0,94,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="212"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top" Width="138" Height="35" Click="Button_Click"/>
    </Grid>
</Window>
